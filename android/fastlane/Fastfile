require 'dotenv'

# âœ… ØªØ­Ù…ÙŠÙ„ Ù…ØªØºÙŠØ±Ø§Øª Ø§Ù„Ø¨ÙŠØ¦Ø© Ù…Ù† .env ÙÙŠ Ø¬Ø°Ø± Ø§Ù„Ù…Ø´Ø±ÙˆØ¹
env_path = File.expand_path("../../../.env", __FILE__)
Dotenv.load(env_path) if File.exist?(env_path)

default_platform(:android)

platform :android do
  desc "Distribute APK to Firebase and upload mapping to Sentry"
  lane :firebase_distribution do
    # ğŸ§¹ Clean & prepare
    sh "flutter clean"
    sh "flutter pub get"

    # ğŸ—ï¸ Build release APK
    sh "flutter build apk --release --target lib/main.dart --no-tree-shake-icons"

    # âœ… Ensure correct path
    apk_path = "build/app/outputs/flutter-apk/app-release.apk"
    mapping_path = "build/app/outputs/mapping/release"

    # ğŸš€ Firebase App Distribution
    firebase_app_distribution(
      app: ENV["FIREBASE_APP_ID"],
      firebase_cli_token: ENV["FIREBASE_CLI_TOKEN"],
      android_artifact_type: "APK",                     # âœ… ÙŠØ¶Ù…Ù† Ø£Ù†Ù‡ ÙŠØ¹Ø±Ù Ù†ÙˆØ¹ Ø§Ù„Ù…Ù„Ù
      android_artifact_path: apk_path,                  # âœ… ØªØ£ÙƒØ¯ Ù…Ù† Ø£Ù†Ù‡ relative ÙˆÙ„ÙŠØ³ ../
      groups: "SystemProTester",
      release_notes: ENV["FIREBASE_RELEASE_NOTES"]
    )

    # ğŸ§  Sentry: upload proguard mapping
    sentry_upload_sourcemaps(
      auth_token: ENV["SENTRY_AUTH_TOKEN"],
      org: ENV["SENTRY_ORG"],
      project: ENV["SENTRY_PROJECT"],
      dist: Time.now.to_i.to_s,
      include: mapping_path,
      url_prefix: "~/",
      wait: true
    )
  end
end
